{
  "name": "copy-folder-content",
  "displayName": "Copy Folder Content",
  "description": "Copies the content of a folder into the clipboard",
  "icon": "res/logo.png",
  "private": true,
  "author": "mefengl",
  "publisher": "mefengl",
  "repository": "https://github.com/mefengl/vscode-copy-folder-content",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Copy Folder Content",
      "properties": {
        "copy-folder-content.suffix": {
          "type": "string",
          "default": "",
          "description": "Suffix to append after the copied folder content."
        }
      }
    },
    "commands": [
      {
        "command": "extension.copyFolderContent",
        "title": "Copy Folder Content"
      },
      {
        "command": "extension.copyFolderContentWithSuffix",
        "title": "Copy Folder Content With Suffix"
      },
      {
        "command": "extension.copyFolderContentWithoutComments",
        "title": "Copy Folder Content Without Comments"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "extension.copyFolderContent",
          "group": "copy-folder-content"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "extension.copyFolderContentWithSuffix",
          "group": "copy-folder-content"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "extension.copyFolderContentWithoutComments",
          "group": "copy-folder-content"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/strip-comments": "^2.0.1",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^10.0.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "strip-comments": "^2.0.1"
  }
}
